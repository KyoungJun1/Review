CREATE TABLE "MEMBER" (
	"MEM_ID"	VARCHAR(200)		NOT NULL,
	"MEM_PW"	VARCHAR(100)		NOT NULL,
	"MEM_NAME"	VARCHAR(200)		NOT NULL,
	"MEM_PHONE"	VARCHAR(100)		NOT NULL,
	"MEM_MAIL"	VARCHAR(300)		NOT NULL,
	"MEM_ADD"	VARCHAR(300)		NOT NULL,
	"MEM_DB"	NUMBER		NOT NULL,
	"MEM_STATE"	VARCHAR(50)		NOT NULL,
	"MEM_DATE"	DATE	DEFAULT SYSDATE	NOT NULL,
	"MEM_TYPE"	NUMBER		NOT NULL
);

COMMENT ON COLUMN "MEMBER"."MEM_ID" IS '아이디';

COMMENT ON COLUMN "MEMBER"."MEM_PW" IS '비밀번호';

COMMENT ON COLUMN "MEMBER"."MEM_NAME" IS '이름';

COMMENT ON COLUMN "MEMBER"."MEM_PHONE" IS '전화번호';

COMMENT ON COLUMN "MEMBER"."MEM_MAIL" IS '이메일';

COMMENT ON COLUMN "MEMBER"."MEM_ADD" IS '주소';

COMMENT ON COLUMN "MEMBER"."MEM_DB" IS '생년월일';

COMMENT ON COLUMN "MEMBER"."MEM_STATE" IS '상태';

COMMENT ON COLUMN "MEMBER"."MEM_DATE" IS '생성날짜';

COMMENT ON COLUMN "MEMBER"."MEM_TYPE" IS '등급';

CREATE TABLE "LIBRARY" (
	"LIB_NUM"	NUMBER		NOT NULL,
	"LIB_GENUM"	NUMBER		NOT NULL,
	"LIB_NAME"	VARCHAR(500)		NOT NULL,
	"LIB_STATE"	VARCHAR(100)		NOT NULL,
	"LIB_TIME"	VARCHAR(300)		NULL,
	"LIB_PIC"	VARCHAR(300)		NULL,
	"LIB_DATE"	DATE	DEFAULT SYSDATE	NOT NULL,
	"MEM_ID"	VARCHAR(200)		NULL
);

COMMENT ON COLUMN "LIBRARY"."LIB_NUM" IS '번호';

COMMENT ON COLUMN "LIBRARY"."LIB_GENUM" IS '장르번호';

COMMENT ON COLUMN "LIBRARY"."LIB_NAME" IS '책이름';

COMMENT ON COLUMN "LIBRARY"."LIB_STATE" IS '상태';

COMMENT ON COLUMN "LIBRARY"."LIB_TIME" IS '기간';

COMMENT ON COLUMN "LIBRARY"."LIB_PIC" IS '사진';

COMMENT ON COLUMN "LIBRARY"."LIB_DATE" IS '생성날짜';

COMMENT ON COLUMN "LIBRARY"."MEM_ID" IS '대여자';

CREATE TABLE "BOARD" (
	"BO_NUM"	NUMBER		NOT NULL,
	"MEM_ID"	VARCHAR(200)		NOT NULL,
	"BO_TITLE"	VARCHAR(500)		NOT NULL,
	"BO_CONTENT"	VARCHAR(1000)		NOT NULL,
	"BO_LIKEPOINT"	NUMBER		NOT NULL,
	"BO_SEEPOINT"	NUMBER		NOT NULL,
	"BO_PIC"	VARCHAR(300)		NULL,
	"BO_DATE"	DATE		NOT NULL
);

COMMENT ON COLUMN "BOARD"."BO_NUM" IS '게시번호';

COMMENT ON COLUMN "BOARD"."MEM_ID" IS '글쓴이';

COMMENT ON COLUMN "BOARD"."BO_TITLE" IS '제목';

COMMENT ON COLUMN "BOARD"."BO_CONTENT" IS '내용';

COMMENT ON COLUMN "BOARD"."BO_LIKEPOINT" IS '좋아요수';

COMMENT ON COLUMN "BOARD"."BO_SEEPOINT" IS '조회수';

COMMENT ON COLUMN "BOARD"."BO_PIC" IS '사진';

COMMENT ON COLUMN "BOARD"."BO_DATE" IS '등록날짜';

CREATE TABLE "REPLY" (
	"RE_NUM"	NUMBER		NOT NULL,
	"BO_NUM"	NUMBER		NOT NULL,
	"MEM_ID"	VARCHAR(200)		NOT NULL,
	"RE_CONTENT"	VARCHAR(500)		NOT NULL
);

COMMENT ON COLUMN "REPLY"."RE_NUM" IS '댓글번호';

COMMENT ON COLUMN "REPLY"."BO_NUM" IS '게시번호';

COMMENT ON COLUMN "REPLY"."MEM_ID" IS '작성자';

COMMENT ON COLUMN "REPLY"."RE_CONTENT" IS '내용';

CREATE TABLE "LIKECHECK" (
	"LI_NUM"	NUMBER		NOT NULL,
	"BO_NUM"	NUMBER		NOT NULL,
	"MEM_ID"	VARCHAR(200)		NOT NULL
);

COMMENT ON COLUMN "LIKECHECK"."LI_NUM" IS '좋아번호';

COMMENT ON COLUMN "LIKECHECK"."BO_NUM" IS '게시번호';

COMMENT ON COLUMN "LIKECHECK"."MEM_ID" IS '아이디';

ALTER TABLE "MEMBER" ADD CONSTRAINT "PK_MEMBER" PRIMARY KEY (
	"MEM_ID"
);

ALTER TABLE "LIBRARY" ADD CONSTRAINT "PK_LIBRARY" PRIMARY KEY (
	"LIB_NUM"
);

ALTER TABLE "BOARD" ADD CONSTRAINT "PK_BOARD" PRIMARY KEY (
	"BO_NUM"
);

ALTER TABLE "REPLY" ADD CONSTRAINT "PK_REPLY" PRIMARY KEY (
	"RE_NUM"
);

ALTER TABLE "LIKECHECK" ADD CONSTRAINT "PK_LIKECHECK" PRIMARY KEY (
	"LI_NUM"
);

ALTER TABLE "LIBRARY" ADD CONSTRAINT "FK_MEMBER_TO_LIBRARY_1" FOREIGN KEY (
	"MEM_ID"
)
REFERENCES "MEMBER" (
	"MEM_ID"
);

ALTER TABLE "BOARD" ADD CONSTRAINT "FK_MEMBER_TO_BOARD_1" FOREIGN KEY (
	"MEM_ID"
)
REFERENCES "MEMBER" (
	"MEM_ID"
);

ALTER TABLE "REPLY" ADD CONSTRAINT "FK_BOARD_TO_REPLY_1" FOREIGN KEY (
	"BO_NUM"
)
REFERENCES "BOARD" (
	"BO_NUM"
);

ALTER TABLE "REPLY" ADD CONSTRAINT "FK_MEMBER_TO_REPLY_1" FOREIGN KEY (
	"MEM_ID"
)
REFERENCES "MEMBER" (
	"MEM_ID"
);

ALTER TABLE "LIKECHECK" ADD CONSTRAINT "FK_BOARD_TO_LIKECHECK_1" FOREIGN KEY (
	"BO_NUM"
)
REFERENCES "BOARD" (
	"BO_NUM"
);

ALTER TABLE "LIKECHECK" ADD CONSTRAINT "FK_MEMBER_TO_LIKECHECK_1" FOREIGN KEY (
	"MEM_ID"
)
REFERENCES "MEMBER" (
	"MEM_ID"
);

